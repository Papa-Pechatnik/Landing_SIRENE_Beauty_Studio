---
const { class: className} = Astro.props;

interface Color {
	color: string;
}

const { color } = Astro.props as Color;

const NavLinks = [
    { title: "Servises", href: "#" },
    { title: "About me", href: "#" },
    { title: "Price list", href: "#" },
    { title: "Contact & Location", href: "#" },
    ];
---
<nav class={className}>
    <ul class="nav-list" >
        { NavLinks.map((item) => 
        <li class="nav-item">
            <a class="nav-item__link" data-color={color} href={item.href} title={item.title}>{item.title}</a>
        </li>
        ) }
    </ul>
</nav>


<style>
    .nav-item__link {
        text-decoration: none;
        text-wrap: nowrap;
    }
    .footer-nav {
    }

    .footer-nav .nav-list {
        display: flex;
        flex-direction: column;
        row-gap: calc( 2 * var(--flex-gap-min));
    }

    .footer-nav .nav-item__link {
        font-family: var(--font-Roboto);
        font-size: clamp(0.875rem, 0.0096rem + 2.4038vw, 1.5rem);/*576 - 14px 992px - 24px*/
        font-weight: 400;
        transition: color 0.7s;
    }

    .footer-nav .nav-item__link:hover {
        color: var(--color-khaki-dark);
        
    }

    @media screen and (max-width: 575.98px) {
        .footer-nav {
        }

        .footer-nav .nav-item__link {
            font-weight: 500;
        }
    }
</style>