---
import { Icon } from "astro-icon/components";
---
<button>
    Book now
    <div class="icon-background">
        <Icon name="arrow-btn"/>    
    </div>
</button>

<style>
    button {
        position: relative;
text-align: center;
        border: 1.57px solid var(--color-gold);
border-radius: 48px;
width: 190px;
height: 50px;
background: rgba(255, 255, 255, 0.6);
    }
    [data-icon="arrow-btn"] {
        position: absolute;
        top:0;
        right: 0;
        width: 50px;
        height: 50px;
        aspect-ratio: 1/1;
        border-radius: 50%;
        background-color: brown;
    }
</style>