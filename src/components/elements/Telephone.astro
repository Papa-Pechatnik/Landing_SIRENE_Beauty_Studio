---
import { Icon } from 'astro-icon/components'

const { class: className} = Astro.props;

interface Color {
	color: string;
}

const { color } = Astro.props as Color;

interface Icons {
	width: number;
	height: number;
}
const { width, height} = Astro.props as Icons;



const tel = 8476710065;
---

<a class:list={[className, "tel font-size_4"]} data-color={color} href=`tel:+${tel}`>
    <Icon name = "phone" width={width} height={height}/>
    <p>(847) 671 0 065</p>
</a>

<style>
    .tel {
        display: flex;
        align-items: center;
        font-family: var(--font-Roboto);
        font-style: normal;
        transition: color 0.7s;
        /* gap: 20px; */
    }

    .tel:is(:hover, :focus) {
        color: var(--color-khaki-dark);
    }

    .footer-address {
        font-weight: 400;
        column-gap: 14px;
    }

    .footer-address [data-icon="phone"] {
        width: clamp(1.375rem, 0.1635rem + 3.3654vw, 2.25rem);
        /* 992-24; 576 - 16*/
    }

    /* [data-icon="phone"] {
        width: clamp(1.625rem, 0.2404rem + 3.8462vw, 3.125rem);
        height: auto;
    } */
    @media screen and (max-width: 575.98px) {
        .footer-address {
            font-weight: 500;
            column-gap: 10px;
            font-size: clamp(1rem, 0.3077rem + 1.9231vw, 1.5rem);
            /* 992-24; 576 - 16*/
        }
    }
</style>